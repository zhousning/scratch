.container-fluid
  .row.justify-content-sm-center
    .col-sm-12
      = form_for [@qes_bank, @qaa], :url => "/qes_banks/#{idencode(@qes_bank.id)}/qaas/#{@qaa.id ? idencode(@qaa.id) : ''}", :builder => WebsiteFormBuilder, :html => {:'data-parsley-validate' => true} do |f|
        - if @qaa.errors.any?
          #error_explanation.alert.alert-danger.alert-dismissible.fade.show
            %button.close{"aria-label" => "Close", "data-dismiss" => "alert", :type => "button"}
              %span{"aria-hidden" => "true"} x 
            %h2= "#{pluralize(@qaa.errors.count, "错误")}:"
            %ul
              - @qaa.errors.full_messages.each do |msg|
                %li= msg
        .row
          .col-sm-12
            %h2.text-center
              = image_tag "gykg.jpg"
          .col-md-8.offset-md-2.p-5.border
            #flash_explanation
            .card.border-0.mb-3.rounded-0
              .card-header.bg-transparent.border-success
                %h5
                  = Setting.qaas.label
              .card-body
                %table.w-100.table-bordered.day-pdt-table
                  %tbody
                    
                    %tr
                      %td.p-2.text-center
                        = f.label Setting.qaas.title, :class => "text-center"
                      %td.p-2.text-center
                        = f.text_area :title, :class => "form-control", :rows => "10" , :required => true
                      
                    
                    
                      %td.p-2.text-center
                        = f.label Setting.qaas.answer, :class => "text-center"
                      %td.p-2.text-center
                        = f.text_area :answer, :class => "form-control", :rows => "10" , :required => true
                      
                    
          
          
          
          
          
            .form-group.row
              .col-3.offset-3
                = f.submit '保存', :class => "button  button-small button-action"
            -#
              .col-3.offset-1
                = link_to '返回', qaas_path, :class => "button button-small  button-caution"
